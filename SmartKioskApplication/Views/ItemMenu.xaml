            <TextBlock  x:Name="cartItem7"  DataContext="{Binding myCart}"
                       Text="{Binding Name}"  Foreground="#111F50"  FontSize="24" FontWeight="DemiBold" ></TextBlock>
        </StackPanel>
        <StackPanel  Grid.Row="8" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button x:Name="Del7" DataContext="{Binding myCart}" Click="btnDel7" BorderBrush="Transparent" Background="Transparent" Margin="12">
                <Image x:Name="delIcon7" >
                </Image>
            </Button>
        </StackPanel>
        <StackPanel x:Name="btnIncDec7" Visibility="Hidden" Grid.Column="5" Grid.ColumnSpan="2"  VerticalAlignment="Top"  Grid.Row="9" Margin="0,0,5,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="txtPortion7"  Text="{Binding Portion}"  DataContext="{Binding myCart}" Margin="0,0,15,0" FontSize="15" FontWeight="Heavy">

            </TextBlock>
            <Border  BorderBrush="LightBlue" BorderThickness="1" Background="#111F50" CornerRadius="4" Height="35">
                <Button x:Name="Dec7" DataContext="{Binding myCart}"   Width="30"  FontSize="20" Click="btnDec7" Background="Transparent" BorderBrush="Transparent">
                    <TextBlock Text="-" Foreground="White"></TextBlock>
                </Button>
            </Border>
            <Border  BorderBrush="LightBlue" BorderThickness="1" Background="Transparent" CornerRadius="2" Height="35">
                <TextBlock x:Name="Quantity7" Text="{Binding Quantity}" DataContext="{Binding myCart}" Width="40" FontWeight="Bold" TextAlignment="Center" FontSize="20" >
                </TextBlock>
            </Border>
            <Border BorderBrush="LightBlue" BorderThickness="1" Background="#111F50" CornerRadius="4" Height="35">
                <Button x:Name="Inc7" DataContext="{Binding myCart}" Width="30" FontSize="20"  BorderBrush="Transparent" Click="btnInc7" Background="Transparent" >
                    <TextBlock Text="+" Foreground="White"></TextBlock>
                </Button>
            </Border>
        </StackPanel>

        <!--cart item-8-->
        <StackPanel Grid.Row="8" Grid.Column="7" Grid.ColumnSpan="2"  HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock  x:Name="cartItem8"  DataContext="{Binding myCart}"
                       Text="{Binding Name}"  Foreground="#111F50"  FontSize="24" FontWeight="DemiBold" ></TextBlock>
        </StackPanel>
        <StackPanel  Grid.Row="8" Grid.Column="9" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button x:Name="Del8" DataContext="{Binding myCart}" Click="btnDel8" BorderBrush="Transparent" Background="Transparent" Margin="12">
                <Image x:Name="delIcon8" >
                </Image>
            </Button>
        </StackPanel>
        <StackPanel x:Name="btnIncDec8" Visibility="Hidden" Grid.Column="7" Grid.ColumnSpan="3" VerticalAlignment="Top"  Grid.Row="9" Margin="0,0,5,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="txtPortion8"  Text="{Binding Portion}"  DataContext="{Binding myCart}" Margin="0,0,15,0" FontSize="15" FontWeight="Heavy">

            </TextBlock>
            <Border  BorderBrush="LightBlue" BorderThickness="1" Background="#111F50" CornerRadius="4" Height="35">
                <Button x:Name="Dec8" DataContext="{Binding myCart}"  Width="30"  FontSize="20" Click="btnDec8" Background="Transparent" BorderBrush="Transparent">
                    <TextBlock Text="-" Foreground="White"></TextBlock>
                </Button>
            </Border>
            <Border  BorderBrush="LightBlue" BorderThickness="1" Background="Transparent" CornerRadius="2" Height="35">
                <TextBlock x:Name="Quantity8" Text="{Binding Quantity}" DataContext="{Binding myCart}" Width="40" FontWeight="Bold" TextAlignment="Center" FontSize="20" >
                </TextBlock>
            </Border>
            <Border BorderBrush="LightBlue" BorderThickness="1" Background="#111F50" CornerRadius="4" Height="35">
                <Button x:Name="Inc8" DataContext="{Binding myCart}" Width="30" FontSize="20"  BorderBrush="Transparent" Click="btnInc8" Background="Transparent" >
                    <TextBlock Text="+" Foreground="White"></TextBlock>
                </Button>
            </Border>
        </StackPanel>
        <!--cart display ends here-->

        <!--buttons/controls to proceed the transaction-->
        <Border x:Name="Checkout" Grid.Column="10" Grid.RowSpan="3" Grid.Row="6" BorderBrush="Gainsboro" Visibility="Hidden"  Background="#008080" VerticalAlignment="Center" 
                    BorderThickness="2" CornerRadius="5"   Width="auto" Height="auto" HorizontalAlignment="Center">
            <Button Background="Transparent"  BorderBrush="Transparent" Height="auto" Click="btnCheckout" Margin="5,0,5,0">
                <StackPanel Orientation="Vertical">
                    <TextBlock TextAlignment="Center" Background="Transparent"  Text="Review Order" FontSize="28" Margin="0,0,0,4"
                               FontFamily="Candara" FontWeight="Heavy" Width="auto" Foreground="White"/>
                    <Line Grid.Row="6" Grid.ColumnSpan="12" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3" X1="0" Y1="0" X2="200" Y2="0" ></Line>
                    <TextBlock TextAlignment="Center" Background="Transparent"  Text="CHECKOUT" FontSize="28" 
                               FontFamily="Candara" FontWeight="Heavy" Width="auto" Foreground="White"/>
                </StackPanel>


                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="#008080">
                                                <ContentPresenter VerticalAlignment="Center" ></ContentPresenter>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>


        <Button x:Name="Cancel" Visibility="Hidden" Grid.Column="10" Grid.Row="8" Grid.RowSpan="2" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" 
            HorizontalAlignment="Center" Click="btnCancel" Margin="5,0,5,0" >
            <Label Background="Transparent" Content="CANCEL ORDER" FontSize="20" 
                                FontWeight="SemiBold" Width="auto" FontFamily="normal" Foreground="#B22222">
                <Label.BitmapEffect>
                    <DropShadowBitmapEffect Color="Black" Direction="320" ShadowDepth="8" Opacity=".7" Softness="9" />
                </Label.BitmapEffect>
            </Label>
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <ContentPresenter  VerticalAlignment="Center" ></ContentPresenter>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!--proceeding buttons end here-->


        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.75*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.23*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition Width="0.35*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition Width="0.75*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>

        </Grid.ColumnDefinitions>




    </Grid>

</Window>
